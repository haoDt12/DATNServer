doctype html
head
    meta(charset='utf-8')
    title Create new product
    meta(name='viewport' content='width=device-width, initial-scale=1')
    script(src='https://unpkg.com/swiper/swiper-bundle.min.js')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
    link(href='/css/product_action.css' rel='stylesheet')
.container-fluid
    .container
        .d-flex.justify-content-between.align-items-lg-center.py-3.flex-column.flex-lg-row
            h2.h5.mb-3.mb-lg-0
                a.text-muted(href='../../pages/admin/customers.html')
                    i.bi.bi-arrow-left-square.me-2
                |           Update Product
            .hstack.gap-3
                a#cancel.btn.btn-outline-dark(href='/stech.manager/product') Cancel
                a#save.btn.btn-outline-success() Save
        .row

            .col-lg-8
                .card.mb-4
                    .card-body
                        h3.h6.mb-4 Basic Information
                        .row
                            .col-lg-6
                                .mb-3
                                    label.form-label Product name
                                    input#title.form-control(type='text' placeholder='Enter product name hear...' value = products.title)
                            .col-lg-6
                                .mb-3
                                    label.form-label Price
                                    input#price.form-control(type='number' placeholder='Enter price hear...' min='0' value = products.price)
                        .row
                            .col-lg-6
                                .mb-3
                                    label.form-label Quantity
                                    input#quantity.form-control(type='number' min='0' placeholder='Enter quantity hear...' value = products.quantity)
                                .mb-3
                                    a.form-control(id='textToken', style="display: none; " ) #{token}
                                .mb-3
                                    a.form-control(id='idProduct', style="display: none; " ) #{products._id}
                .card.mb-4
                    .card-body
                        h3.h6.mb-4 Details Product
                        .mb-3
                            label.form-label Description
                            textarea#description.form-control(placeholder='Enter description hear...' rows='4')
                                | #{products.description}
                .card.mb-4
                    .card-body
                        h3.h6.mb-4 Product Option
                        button#openAddProductModal.btn.btn-outline-primary.btn-sm.mb-12(type='button' data-bs-toggle='modal' data-bs-target='OptionModal') Add a new option
                        table.table.table-sm.table-info
                            thead
                                tr
                                    th(scope='col') STT
                                    th(scope='col') Type
                                    th(scope='col') Title
                                    th(scope='col') Content
                                    th(scope='col') Quantity
                                    th(scope='col') FeeArise
                                    th(scope='col') Action
                            tbody#TableOption


                        input.d-none.form-control(id= 'valueOption' value=products.option)
            .col-lg-4
                .card.mb-4
                    .card-body
                        h3.h6 Category
                        input#keyword.form-control(placeholder='Search and select category hear...' value=products.category autocomplete='off' required='' type='text')
                        div#categoryDropdown.dropdown-content(style='display: none')
                            each cate in categories
                                div.dropdown-item(class="dropdown_item" data-id=cate._id  data-id-cate=cate_id)
                                    img(src=`${cate.img}` alt=`${cate.title}` style='width:40px')
                                    span #{cate.title}
                .card.mb-4
                    .card-body
                        h3.h6 Product avatar
                        img#product_avatar.form-control(width='250' height='200')
                        input#img_cover.form-control(type='file'  accept='image/*' src=products.img_cover)
                .card.mb-4
                    .card-body
                        h3.h6 Product video
                        video#video_product.form-control(controls='' width='250' height='200')
                        input#video.form-control(type='file' accept='video/*' src= products.video)
                .card.mb-4
                    .card-body
                        h3.h6 Product image description
                        .mb-2
                            #imageList.swiper-container.form-control
                                .swiper-wrapper
                            input#list_img.form-control(type='file' accept='image/*' multiple='' src=products.list_img)
    #OptionModal.modal.fade
        .modal-dialog
            .modal-content
                .modal-header
                    h5.modal-title Option product
                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body
                    form(action='' method='post')
                        .mb-4
                            label Ki&#x1EC3;u
                            select#OptionType.form-control
                                option(value='Color') Color
                                option(value='Ram') Ram
                                option(value='Rom') Rom
                        .mb-4
                            .form-group
                                label(for='name') T&ecirc;n
                                input#name.name.form-control(type='text' name='name' placeholder='' aria-describedby='helpId')

                        .mb-4
                            .form-group
                                label#lableColor Content
                                input#color.content.form-control(type='color')
                        .mb-4
                            .form-group
                                label#lableContent Content
                                input#content.content.form-control(type='text' name='content' placeholder='' aria-describedby='helpId')
                        .mb-4
                            .form-group
                                label Quantity
                                input#quantityOption.content.form-control(type='number' min='0' value='0' name='content' placeholder='' aria-describedby='helpId')
                        .mb-4
                            .form-group
                                label#lableFeeArise FeesArise
                                input#feeArise.content.form-control(type='number' min='0' value='0' name='content' placeholder='' aria-describedby='helpId')


                .modal-footer
                    button.btn.btn-dark(type='button' data-bs-dismiss='modal') Hu&#x1EF7;
                    button#add_option.btn.btn-primary(type='button') L&#x1B0;u
                    button#save_option.btn.btn-primary(type='button') sá»­a
    script(src='https://code.jquery.com/jquery-1.10.2.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    script(src='/js/edit_product_action.js')
    script(src=`https://unpkg.com/axios/dist/axios.min.js`)
